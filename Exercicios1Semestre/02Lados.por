programa {
  funcao inicio() {
    // Variáveis
      inteiro lado
      inteiro resultado

      // Leitura e escrita
      escreva("digite o lado do quadrado:")
      leia(lado)

      // Calculo
      resultado = lado * lado
      // Resposta
      escreva("você tem uma área de: " + resultado)
      // Calculo
      resultado = lado*4
      // Resposta
      escreva("\nvocê tem um perimetro de: " + resultado)
  }
}
